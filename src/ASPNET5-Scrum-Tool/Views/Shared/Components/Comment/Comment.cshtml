@model Comments

<div class="Comment" id="@Model.ID">
    <div class="dropdown CommentOptions Hidden">
        <a href="#" class="CommentDropDown" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <img src='~/images/EditTaskPen.png'></img>
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
            <li><a href="#" class="DeleteCommentLink">Delete Comment</a></li>
        </ul>
    </div>
    <h4 class="CommentName">
        @Model.Name :
        <span class="CommentContent">
            @Model.Content
        </span>
    </h4>
    <p class="CommentDate">@Model.CreationDate</p>

</div>